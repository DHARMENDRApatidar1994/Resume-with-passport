<%- include('../partials/header')%>
<div class="container mt-5 bg-warning bg-opacity-50 p-3">
    <ul class="d-flex justify-content-evenly fs-3">
        <li><a href="/education">Eduaction</a></li>
        <li><a href="/skill">Skill</a></li>
        <li><a href="/project">Project</a></li>
        <li><a href="/experience">Experience</a></li>
        <li><a href="/interest">Interest</a></li>
    </ul>
    <hr />
    <form action="/add-edu" class="education mt-5 container d-flex justify-content-evenly flex-wrap w-75" method="POST">
        <input class="form-control w-50 ms-5 mt-2 " type="text" placeholder="Institute Name" name="institute" />
        <input class="form-control w-50 ms-5 mt-2 " type="text" placeholder="Degree Name" name="degree" />
        <input class="form-control w-50 ms-5 mt-2 " type="text" placeholder="University Name" name="university" />
        <input class="form-control w-50 ms-5 mt-2 " type="text" placeholder="Year" name="year" />
        <input class="form-control w-50 ms-5 mt-2 " type="text" placeholder="Grade/Percentage" name="grade" />

        <button class="btn btn-dark mt-3 w-50">Add Education</button>
    </form>
    <hr />
    
        <div class="d-flex flex-wrap">
        <% user.education.forEach((e, i)=> { %>
            <div class="card me-3 mb-3" style="width: 18rem">
                <div class="card-body">
                    <h5 class="card-title"><%= e.degree%></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= e.institute%> - <%= e.year%> | <%= e.university%></h6>
                    <p class="card-text">CGPA/PERCENT <%= e.grade%></p>
                    <a href="/delete-edu/<%= i%>" class="btn btn-danger card-link ">Remove</a>
                </div>
            </div>
       
        <% })%>
    
</div>
</div>

<%- include('../partials/footer')%>